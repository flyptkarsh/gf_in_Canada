<%= form_for(@my_girlfriend) do |f| %>
  <% if @my_girlfriend.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@my_girlfriend.errors.count, "error") %> prohibited this my_girlfriend from being saved:</h2>

      <ul>
      <% @my_girlfriend.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :hometown %><br>
    <%= f.text_field :hometown %>
  </div>
  <div class="field">
    <%= f.label :favorite_food %><br>
    <%= f.text_field :favorite_food %>
  </div>
  <div class="field">
    <%= f.label :where_we_met %><br>
    <%= f.text_field :where_we_met %>
  </div>
  <div class="field">
    <span data-tooltip aria-haspopup="true" class="has-tip" title="Your input needs to start with a verb. Example 'jumping on a water bed' "> 
    <%= f.label :what_turns_me_on %><br>
    <%= f.text_area :what_turns_me_on %>
    </span>
  </div>
  <div class="field">
      <%= f.label :number_she_texts %><br>
      <span data-tooltip aria-haspopup="true" class="has-tip" title=" Your cell number, no landlines "> 
      <%= f.text_field :number_she_texts %>
    </span>
  </div>
  <div class="field">
    <%= f.label :is_current_girlfriend %><br>
    <%= f.check_box :is_current_girlfriend %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
